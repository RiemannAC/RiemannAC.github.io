// 上下一篇文章優化
div.post-nav-item {
  & > a {
    // 修正 a box 長 50% 問題 (沒點文字部份也會移動)
    display: inline-block;
    font-size: 20px;
    transition-property: transform;
    transition-timing-function: ease-in-out;
    transition-duration: 0.2s;
  }
  // 移動距離設定
  & > a[rel="next"]:hover {
    // 上一頁左移 ( 命名為 next 的錯誤這邊先不管 )
    transform: translateX(-4px);
  }
  & > a[rel="prev"]:hover {
    // 下一頁右移
    transform: translateX(4px);
  }
  // & > a::after {
  //   content: '';
  //   position: absolute;
  //   left: 50%;
  //   top: 50%;
  //   transform: translate(-50%, -50%);
  // }
  // 與 icon 間距調整
  // 設定 i margin 無效
  & > a[rel="next"] {
    padding-left: 18px;
  }
  & > a[rel="prev"] {
    padding-right: 18px;
  }
}




