// Code block file path
.highlight figcaption {
  padding: 0.5em;
  background: #eee;
  border-bottom: 1px solid #e9e9e9;
  margin: 0;
}
// Title anchor
h1 a:nth-child(2),
h2 a:nth-child(2),
h3 a:nth-child(2),
h4 a:nth-child(2),
h5 a:nth-child(2),
h6 a:nth-child(2)  {
  // Remove bottom line
  border-bottom: none;
  // Add anchor style
  &:hover {
    &::after {
      content: "#";
      margin-left: 0.5em;
      position: absolute;
      color: #0e83cd;
    }
  }
}
// tag of post footer
div.post-tags {
  display: flex;
  & > a {
    align-items: flex-start;
    border: 1px solid #8bcdf8;
    border-radius: 8px;
    padding: 4px 8px;
    color: #8bcdf8;
    cursor: pointer;
    -webkit-transition: all 0.2s ease-in-out;
    -moz-transition: all 0.2s ease-in-out;
    -o-transition: all 0.2s ease-in-out;
    -ms-transition: all 0.2s ease-in-out;
    transition: all 0.2s ease-in-out;
  }
  & > a:hover {
    color: #fff;
    background-color: #8bcdf8;
  }
}

